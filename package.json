{
  "name": "react-customizable-dropdown",
  "version": "1.0.4",
  "description": "A highly customizable, accessible, and premium React Dropdown component with built-in search, multi-select, field mapping, debouncing, sublabels, and extensive theming options.",
  "type": "module",
  "main": "./dist/dropdown.umd.js",
  "module": "./dist/dropdown.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dropdown.es.js",
      "require": "./dist/dropdown.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "keywords": [
    "react",
    "next-js",
    "dropdown",
    "select",
    "component",
    "customizable",
    "typescript",
    "tailwind",
    "multi-select",
    "searchable",
    "accessible",
    "a11y",
    "ui",
    "form",
    "input"
  ],
  "author": {
    "name": "shiningsudipto",
    "url": "https://github.com/shiningsudipto"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiningsudipto/react-customizable-dropdown.git"
  },
  "bugs": {
    "url": "https://github.com/shiningsudipto/react-customizable-dropdown/issues"
  },
  "homepage": "https://react-customizable-dropdown.vercel.app",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
